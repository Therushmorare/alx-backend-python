#!/bin/bash

# kurbeScript
# Script to start and verify a local Kubernetes cluster using Minikube

# Exit on error
set -e

echo "Starting Kubernetes setup with Minikube..."

# Check if minikube is installed
if ! command -v minikube &> /dev/null
then
    echo "Minikube not found. Please install Minikube first:"
    echo "https://minikube.sigs.k8s.io/docs/start/"
    exit 1
fi

# Start minikube (if not already running)
echo "Starting Minikube cluster..."
minikube start

# Verify cluster info
echo "Verifying Kubernetes cluster status..."
kubectl cluster-info

# Get pods in all namespaces
echo "Retrieving available pods..."
kubectl get pods --all-namespaces

echo "Kubernetes cluster setup and verification completed successfully!"

